{
  "compilerOptions": {
    "target": "es6",

    "module": "commonjs",

    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules", "dist", "__tests__", "coverage"]
}
